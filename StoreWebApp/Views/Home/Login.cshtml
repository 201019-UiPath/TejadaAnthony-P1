@model StoreWebApp.Models.Customer
@{
    Layout = "View";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Better Bats</h2>
        <form asp-controller="Home" asp-action="Login" class="w-50 mt-5 mx-auto">
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input type="email" class="form-control"  id="email" placeholder="Enter email" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input type="password" class="form-control" id="pwd" placeholder="Enter password" asp-for="Password">
            </div>
            <div class="form-group">
                <label asp-for="LocationId">Location</label>
                <input type="number" class="form-control" id="Location"  asp-for="LocationId" min="1" max="2">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</body>
</html>
