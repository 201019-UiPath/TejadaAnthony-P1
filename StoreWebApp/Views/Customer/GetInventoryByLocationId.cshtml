@model IEnumerable<StoreWebApp.Models.Inventory>

@{
    Layout = "_Layout";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BaseballBatsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseballBats.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseballBats.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BaseballBatsId)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.BaseballBats.ProductName)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.BaseballBats.ProductPrice)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <button class="btn btn-secondary text-white float-right" onclick="location.href='@Url.Action("AddCartItem", "Customer", new { BaseballBatId = item.BaseballBatsId, quantity = 1.0 })'">Add to Cart</button>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
