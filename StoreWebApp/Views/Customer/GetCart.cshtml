@model StoreWebApp.Models.Cart

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetCart</title>
</head>
<body>

    <div>
        <h4>Cart</h4>
        <hr />
        <div class="container">
            <div class="row">
                @{ foreach (var item in Model.CartItem)
                    {

                        <div class="card m-2" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(model => item.BaseballBat.ProductName)</h5>
  
                                <h6 class="card-title">@Html.DisplayNameFor(model => item.BaseballBat.ProductType)</h6>
                                <p class="card-text">@Html.DisplayFor(model => item.BaseballBat.ProductType)</p>

                                <h6 class="card-title">@Html.DisplayNameFor(model => item.BaseballBat.ProductPrice)</h6>
                                <p class="card-text">@Html.DisplayFor(model => item.BaseballBat.ProductPrice)</p>
                            </div>
                        </div>

                    }

                }
            </div>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Total)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Total)
                </dd>
            </dl>
        </div>
<div>
    @Html.ActionLink("Add Order", "AddOrder", "Order",Model) |
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
